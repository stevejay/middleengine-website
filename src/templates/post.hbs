<!DOCTYPE html>
<html lang="en">

{{> head description=summary }}

<body class="blog">
    {{> header }}
    <main>
        <article>
            <header class="basic-hero">
                <div class="hero-text-wrap">
                    <h1>{{title}}</h1>
                    <div class="byline">
                        By&nbsp;
                        <address class="author"><a rel="author" href="{{author.url}}">{{author.name}}</a>
                        </address>
                        <time pubdate datetime="{{date}}"
                            title="{{formatDate date "short"}}">{{formatDate date "short"}}</time>
                    </div>
                </div>
            </header>
            <div class="article-body">
                {{{content}}}
                {{#if issueNumber}}
                <section>
                    <h2 id="comments"><a class="header-anchor" href="#changelog">#</a> Comments</h2>
                    <div id="comments-content"></div>
                    <script>
                        Octomments({
                            github: {
                                owner: 'stevejay',
                                repo: 'middleengine-website',
                            },
                            issueNumber: {{ issueNumber }},
                            renderer: [OctommentsRenderer, '#comments-content'],
                            debug: false,
                            endpoints: {
                            issue: 'https://middleengine-website-comments.vercel.app/octomments/issue',
                            token: 'https://middleengine-website-comments.vercel.app/octomments/token',
                        }
                    }).init();
                    </script>
                </section>
                {{/if}}
            </div>
        </article>
    </main>
    {{> footer }}
</body>

</html>