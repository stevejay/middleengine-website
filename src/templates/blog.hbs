<!DOCTYPE html>
<html lang="en">

{{> head title="Blog" description="List of blog posts for the Middle Engine Software Blog" }}

<body class="blog">
    {{> header }}
    <main>
        <section id="blog-posts-listing">
            <header>
                <h1>Blog posts</h1>
            </header>
            <ul>
                {{#each latestBlogPosts}}
                <li>
                    <h3><a href="{{absPath}}">{{meta.title}}</a></h3>
                    <div class="byline">
                        By&nbsp;
                        <address class="author"><a rel="author" href="{{meta.author.url}}">{{meta.author.name}}</a>
                        </address>
                        <time pubdate datetime="{{meta.date}}"
                            title="{{formatDate meta.date "short"}}">{{formatDate meta.date "short"}}</time>
                    </div>
                    <p>{{meta.summary}}</p>
                    <a href="{{absPath}}">Read this post</a>
                </li>
                {{/each}}
                {{#each olderBlogPosts}}
                <li>
                    <h3><a href="{{absPath}}">{{meta.title}}</a></h3>
                    <div class="byline">
                        By&nbsp;
                        <address class="author"><a rel="author" href="{{meta.author.url}}">{{meta.author.name}}</a>
                        </address>
                        <time pubdate datetime="{{meta.date}}"
                            title="{{formatDate meta.date "short"}}">{{formatDate meta.date "short"}}</time>
                    </div>
                    <p>{{meta.summary}}</p>
                    <a href="{{absPath}}">Read this post</a>
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{> footer }}
</body>

</html>